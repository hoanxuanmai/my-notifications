{
  "name": "my-notifications",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:queue": "pnpm --filter my-notifications-backend start:dev", 
    "dev:frontend": "pnpm --filter frontend dev",
    "build:backend": "pnpm --filter my-notifications-backend build",
    "build:frontend": "pnpm --filter my-notifications-frontend build",
    "build": "pnpm build:backend && pnpm build:frontend",
    "lint": "pnpm --filter my-notifications-backend lint && pnpm --filter my-notifications-frontend lint"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
